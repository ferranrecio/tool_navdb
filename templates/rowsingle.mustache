{{!
    @template tool_navdb/rowstable

    Template to show a query result on tool_navdb

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

}}
<table class="table navdb_table singleview">
  <tbody>
    {{#rows}}
        <tr class="row_ops">
          <th scope="row">#</th>
          <td class="opsid_{{id}}">
              {{> tool_navdb/rowoptions}}
          </td>
        </tr>
        {{#cols}}
            <tr class="row_{{name}}">
                <th scope="row" class="col_{{name}}">{{name}}</th>
                <td class="field  col_{{name}}">
                    {{#url}}
                        <a href="{{{url}}}" {{#title}}title="{{title}}"{{/title}}>
                            {{{text}}}
                        </a>
                    {{/url}}
                    {{^url}}
                        {{#title}}<abbr title="{{{title}}}"> {{{text}}}</abbr>{{/title}}
                        {{^title}}{{{text}}}{{/title}}
                    {{/url}}
                </td>
            </tr>
        {{/cols}}
    {{/rows}}
  </tbody>
</table>