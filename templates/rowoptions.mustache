{{^hideoptions}}
    <div class="dropdown">
      <button class="btn dropdown-toggle" type="button" id="dmenu_{{id}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-cog" aria-hidden="true"></i> {{menutext}}
      </button>
      <div class="dropdown-menu" aria-labelledby="dmenu_{{id}}">
        {{#options}}
            <a class="dropdown-item" href="{{{url}}}">{{{icon}}} {{text}}</a>
        {{/options}}
      </div>
    </div>
{{/hideoptions}}